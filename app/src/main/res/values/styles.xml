<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="splashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="toolbar_theme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!--NavigationIcon的颜色-->
        <item name="colorControlNormal">@color/color_ffffff</item>
        <item name="android:textColorPrimary">@color/color_ffffff</item>
    </style>

    <style name="OverFlowMenuTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="actionMenuTextColor">@color/color_212121</item>-->
        <!-- 设置Menu菜单的背景色 -->
        <item name="android:itemBackground">@color/color_ffffff</item>
        <!-- 设置Menu菜单的字体颜色 -->
        <item name="android:textColorPrimary">@android:color/black</item>

        <item name="overlapAnchor">false</item>
    </style>

</resources>
